{
    "name": "vue-demo",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "ts-node genesis.dev -p=tsconfig.json",
        "build": "cross-env NODE_ENV=production ts-node genesis.build -p=tsconfig.json",
        "build:ts": "NODE_ENV=production tsc --build ./node.tsconfig.json",
        "start": "NODE_ENV=production node dist/node/genesis.prod.js",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "eslint . --ext .js,.ts,.vue --fix",
        "lint:css": "stylelint . --syntax less --fix --ignore-path ./.stylelintignore | stylelint . --custom-syntax postcss-html --fix"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@fmfe/genesis-compiler": "0.0.63",
        "@fmfe/genesis-lint": "0.0.63",
        "@types/express": "^4.17.6",
        "@types/node": "^14.0.1",
        "cross-env": "^7.0.2",
        "ts-node": "^8.10.1"
    },
    "dependencies": {
        "@fmfe/genesis-app": "0.0.63",
        "@fmfe/genesis-core": "0.0.63",
        "axios": "^0.19.2",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.5",
        "express": "^4.17.1",
        "vue-meta": "^2.3.3",
        "vue-property-decorator": "^8.4.2",
        "vue-router": "^3.3.4",
        "vuex": "^3.4.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --ext .js,.ts --fix",
            "git add"
        ],
        "*.{css,less}": [
            "stylelint --syntax less --fix",
            "git add"
        ],
        "*.{vue}": [
            "eslint --ext .js,.ts --fix",
            "stylelint --custom-syntax postcss-html --fix",
            "git add"
        ]
    }
}
